{
    "name": "enterprise-react-app",
    "version": "0.0.1",
    "description": "Enterprise React Application boilerplate.",
    "repository": {
        "type": "git",
        "url": "https://github.com/olegsmetanin/enterprise-react-app"
    },
    "scripts": {
        "clean": "echo",
        "build": "echo",
        "postinstall": "rush install && rush link",
        "pkg:install": "rush install && rush link",
        "pkg:gen": "rush generate && rush link",
        "api:check": "cd packages/api && npm run check",
        "webcomponents:build": "cd packages/webcomponents && npm run build",
        "webcomponents:test": "cd packages/webcomponents && npm run test",
        "webcomponents:storybook": "cd packages/webcomponents && npm run storybook",
        "webclient:vendors:build": "cd packages/webclient && npm run vendors:build",
        "webclient:webcomponents:build": "cd packages/webclient && npm run webcomponents:build",
        "webclient:watch": "cd packages/webclient && npm run watch",
        "server:watch": "cd packages/server && npm run watch"
    },
    "devDependencies": {
        "@microsoft/rush": "1.5.1",
        "cross-env": "^1.0.7"
    },
    "license": "MIT"
}