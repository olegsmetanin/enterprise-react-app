{
    "name": "enterprise-react-app",
    "version": "0.0.1",
    "description": "Enterprise React Application boilerplate.",
    "repository": {
        "type": "git",
        "url": "https://github.com/olegsmetanin/enterprise-react-app"
    },
    "scripts": {
        "clean": "echo",
        "build": "echo",
        "pkg:install": "rush install && rush link",
        "pkg:link": "rush link",
        "pkg:gen": "rush generate",
        "app:vendors:build": "cd packages/application && npm run vendors:build",
        "app:components:build": "cd packages/application && npm run components:build",
        "app:server:watch": "cd packages/application && npm run server:watch",
        "app:client:watch": "cd packages/application && npm run client:watch",
        "components:build": "cd packages/components && npm run build",
        "components:test": "cd packages/components && npm run test",
        "components:storybook": "cd packages/components && npm run storybook"
    },
    "devDependencies": {
        "@microsoft/rush": "^1.4.0",
        "cross-env": "^1.0.7"
    },
    "license": "MIT"
}